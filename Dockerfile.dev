# Development Dockerfile for hot reloading
FROM oven/bun:1.3.1
WORKDIR /app

# Copy package files
COPY package.json bun.lockb* ./

# Install dependencies
RUN bun install

# Copy source code
COPY . .

# Expose development port
EXPOSE 8881

# Start development server with hot reloading
CMD ["bun", "run", "dev", "--host", "0.0.0.0", "--port", "8881"]